<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/a"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원하시는 운동을 선택해주세요"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/stretching1"
                android:onClick=""
                android:background="@drawable/woman_laying_on_the_floor_stretching_right_leg"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/stretching2"
                android:background="@drawable/woman_on_her_knees_stretching_arms"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/stretching3"
                android:background="@drawable/woman_stretching_back"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/stretching4"
                android:background="@drawable/woman_sitting_on_the_floor_stretching_head"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/stretching5"
                android:background="@drawable/woman_stretching_arms_and_flexing_legs"
                android:layout_width="90dp"
                android:layout_height="90dp" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
